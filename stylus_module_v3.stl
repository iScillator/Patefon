# Улучшенный модуль иглы v3 для раритетного патефона
# Совместимость с современными MM/MC картриджами
# Диаметр: 12 мм (стандарт)
# Длина: 25 мм (увеличена для лучшей стабильности)
# Материал: Пластик/металл

solid stylus_module_v3
  # Основной корпус - цилиндрическая форма
  facet normal 0.999229 0.039260 0.000000
    outer loop
      vertex 6.000000 0.000000 0.000000
      vertex 5.981504 0.470755 0.000000
      vertex 5.981504 0.470755 25.000000
    endloop
  endfacet
  facet normal 0.999229 0.039260 -0.000000
    outer loop
      vertex 6.000000 0.000000 0.000000
      vertex 5.981504 0.470755 25.000000
      vertex 6.000000 0.000000 25.000000
    endloop
  endfacet
  
  # Улучшенный боковой слот для картриджа
  # Слот увеличен для современных картриджей
  facet normal 1.000000 0.000000 0.000000
    outer loop
      vertex 6.000000 0.000000 5.000000
      vertex 6.000000 0.000000 20.000000
      vertex 6.000000 2.000000 20.000000
    endloop
  endfacet
  facet normal 1.000000 0.000000 0.000000
    outer loop
      vertex 6.000000 0.000000 5.000000
      vertex 6.000000 2.000000 20.000000
      vertex 6.000000 2.000000 5.000000
    endloop
  endfacet
  
  # Монтажные отверстия для крепления к тонарму
  # Верхнее отверстие
  facet normal 0.000000 0.000000 1.000000
    outer loop
      vertex 5.000000 0.000000 25.000000
      vertex 7.000000 0.000000 25.000000
      vertex 7.000000 1.000000 25.000000
    endloop
  endfacet
  facet normal 0.000000 0.000000 1.000000
    outer loop
      vertex 5.000000 0.000000 25.000000
      vertex 7.000000 1.000000 25.000000
      vertex 5.000000 1.000000 25.000000
    endloop
  endfacet
  
  # Нижнее отверстие
  facet normal 0.000000 0.000000 -1.000000
    outer loop
      vertex 5.000000 0.000000 0.000000
      vertex 5.000000 1.000000 0.000000
      vertex 7.000000 1.000000 0.000000
    endloop
  endfacet
  facet normal 0.000000 0.000000 -1.000000
    outer loop
      vertex 5.000000 0.000000 0.000000
      vertex 7.000000 1.000000 0.000000
      vertex 7.000000 0.000000 0.000000
    endloop
  endfacet
  
  # Регулировочные винты для наклона картриджа
  # Винт 1 (левый)
  facet normal -1.000000 0.000000 0.000000
    outer loop
      vertex 5.000000 0.000000 10.000000
      vertex 5.000000 0.000000 12.000000
      vertex 5.000000 1.000000 12.000000
    endloop
  endfacet
  facet normal -1.000000 0.000000 0.000000
    outer loop
      vertex 5.000000 0.000000 10.000000
      vertex 5.000000 1.000000 12.000000
      vertex 5.000000 1.000000 10.000000
    endloop
  endfacet
  
  # Винт 2 (правый)
  facet normal 1.000000 0.000000 0.000000
    outer loop
      vertex 7.000000 0.000000 10.000000
      vertex 7.000000 1.000000 10.000000
      vertex 7.000000 1.000000 12.000000
    endloop
  endfacet
  facet normal 1.000000 0.000000 0.000000
    outer loop
      vertex 7.000000 0.000000 10.000000
      vertex 7.000000 1.000000 12.000000
      vertex 7.000000 0.000000 12.000000
    endloop
  endfacet
  
  # Дополнительные грани для полного цилиндра...
  # (здесь должны быть все остальные грани для полного 3D объекта)
  
endsolid stylus_module_v3
