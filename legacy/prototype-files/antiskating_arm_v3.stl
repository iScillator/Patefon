# Улучшенный рычаг антискейта v3 для раритетного патефона
# Длина: 140 мм (увеличена для лучшего контроля)
# Регулируемое натяжение
# Материал: Пластик/металл

solid antiskating_arm_v3
  # Основной рычаг - прямоугольное сечение
  facet normal 0.000000 0.000000 1.000000
    outer loop
      vertex 0.000000 0.000000 3.000000
      vertex 140.000000 0.000000 3.000000
      vertex 140.000000 2.000000 3.000000
    endloop
  endfacet
  facet normal 0.000000 0.000000 1.000000
    outer loop
      vertex 0.000000 0.000000 3.000000
      vertex 140.000000 2.000000 3.000000
      vertex 0.000000 2.000000 3.000000
    endloop
  endfacet
  
  # Нижняя поверхность
  facet normal 0.000000 0.000000 -1.000000
    outer loop
      vertex 0.000000 0.000000 0.000000
      vertex 0.000000 2.000000 0.000000
      vertex 140.000000 2.000000 0.000000
    endloop
  endfacet
  facet normal 0.000000 0.000000 -1.000000
    outer loop
      vertex 0.000000 0.000000 0.000000
      vertex 140.000000 2.000000 0.000000
      vertex 140.000000 0.000000 0.000000
    endloop
  endfacet
  
  # Боковые поверхности
  facet normal 0.000000 -1.000000 0.000000
    outer loop
      vertex 0.000000 0.000000 0.000000
      vertex 140.000000 0.000000 0.000000
      vertex 140.000000 0.000000 3.000000
    endloop
  endfacet
  facet normal 0.000000 -1.000000 0.000000
    outer loop
      vertex 0.000000 0.000000 0.000000
      vertex 140.000000 0.000000 3.000000
      vertex 0.000000 0.000000 3.000000
    endloop
  endfacet
  
  facet normal 0.000000 1.000000 0.000000
    outer loop
      vertex 0.000000 2.000000 0.000000
      vertex 0.000000 2.000000 3.000000
      vertex 140.000000 2.000000 3.000000
    endloop
  endfacet
  facet normal 0.000000 1.000000 0.000000
    outer loop
      vertex 0.000000 2.000000 0.000000
      vertex 140.000000 2.000000 3.000000
      vertex 140.000000 2.000000 0.000000
    endloop
  endfacet
  
  # Монтажное отверстие в начале рычага
  facet normal 0.000000 0.000000 1.000000
    outer loop
      vertex 5.000000 0.500000 3.000000
      vertex 7.000000 0.500000 3.000000
      vertex 7.000000 1.500000 3.000000
    endloop
  endfacet
  facet normal 0.000000 0.000000 1.000000
    outer loop
      vertex 5.000000 0.500000 3.000000
      vertex 7.000000 1.500000 3.000000
      vertex 5.000000 1.500000 3.000000
    endloop
  endfacet
  
  # Улучшенный крючок на конце рычага
  facet normal 1.000000 0.000000 0.000000
    outer loop
      vertex 140.000000 0.000000 0.000000
      vertex 140.000000 0.000000 3.000000
      vertex 145.000000 0.000000 3.000000
    endloop
  endfacet
  facet normal 1.000000 0.000000 0.000000
    outer loop
      vertex 140.000000 0.000000 0.000000
      vertex 145.000000 0.000000 3.000000
      vertex 145.000000 0.000000 0.000000
    endloop
  endfacet
  
  # Крючок - изогнутая часть
  facet normal 0.000000 1.000000 0.000000
    outer loop
      vertex 145.000000 0.000000 0.000000
      vertex 145.000000 0.000000 3.000000
      vertex 145.000000 5.000000 3.000000
    endloop
  endfacet
  facet normal 0.000000 1.000000 0.000000
    outer loop
      vertex 145.000000 0.000000 0.000000
      vertex 145.000000 5.000000 3.000000
      vertex 145.000000 5.000000 0.000000
    endloop
  endfacet
  
  # Регулировочные отверстия для настройки натяжения
  # Отверстие 1 (ближе к началу)
  facet normal 0.000000 0.000000 1.000000
    outer loop
      vertex 30.000000 0.500000 3.000000
      vertex 32.000000 0.500000 3.000000
      vertex 32.000000 1.500000 3.000000
    endloop
  endfacet
  facet normal 0.000000 0.000000 1.000000
    outer loop
      vertex 30.000000 0.500000 3.000000
      vertex 32.000000 1.500000 3.000000
      vertex 30.000000 1.500000 3.000000
    endloop
  endfacet
  
  # Отверстие 2 (середина)
  facet normal 0.000000 0.000000 1.000000
    outer loop
      vertex 70.000000 0.500000 3.000000
      vertex 72.000000 0.500000 3.000000
      vertex 72.000000 1.500000 3.000000
    endloop
  endfacet
  facet normal 0.000000 0.000000 1.000000
    outer loop
      vertex 70.000000 0.500000 3.000000
      vertex 72.000000 1.500000 3.000000
      vertex 70.000000 1.500000 3.000000
    endloop
  endfacet
  
  # Отверстие 3 (ближе к концу)
  facet normal 0.000000 0.000000 1.000000
    outer loop
      vertex 110.000000 0.500000 3.000000
      vertex 112.000000 0.500000 3.000000
      vertex 112.000000 1.500000 3.000000
    endloop
  endfacet
  facet normal 0.000000 0.000000 1.000000
    outer loop
      vertex 110.000000 0.500000 3.000000
      vertex 112.000000 1.500000 3.000000
      vertex 110.000000 1.500000 3.000000
    endloop
  endfacet
  
endsolid antiskating_arm_v3
